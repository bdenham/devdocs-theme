{
  "name": "Devdocs",
  "scripts": {
    "scss": "node-sass --output-style compressed -o assets/css _scss",
    "autoprefixer": "postcss -u autoprefixer -r assets/css/*",
    "images": "imagemin images/*/* --out-dir assets/images",
    "build:css": "npm run scss && npm run autoprefixer && npm run build:html",
    "watch:css": "nodemon -e scss -x 'npm run build:css'",
    "uglify": "uglifyjs _js/*.js -o assets/js/app.js && uglifyjs assets/js/*.js -m -c -o assets/js/app.min.js",
    "build:js": "node ./bin/build-js.js",
    "watch:js": "nodemon --watch assets/_js -x 'npm run build:js'",
    "jekyll": "bundle exec jekyll build",
    "build:html": "npm run jekyll",
    "watch:html": "onchange '**/*.{html,md}' -e '_site/**/*' -d 1000 -- npm run build:html",
    "serve": "browser-sync start --server '_site'",
    "watch:all": "parallelshell 'npm run watch:css' 'npm run watch:js' 'npm run watch:html' 'npm run serve'"
  },
  "devDependencies": {
    "autoprefixer": "^6.7.5",
    "babel-core": "^6.23.1",
    "bootstrap": "^4.0.0-alpha.5",
    "browser-sync": "^2.18.8",
    "imagemin-cli": "^3.0.0",
    "node-import": "^0.9.2",
    "node-sass": "^4.5.0",
    "nodemon": "^1.11.0",
    "onchange": "^3.2.1",
    "parallelshell": "^2.0.0",
    "postcss-cli": "^3.0.0-beta",
    "requirejs": "^2.3.3",
    "uglify-js": "^2.7.5"
  },
  "dependencies": {
    "imagemin": "^5.2.2"
  },
  "private": true
}
